{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Main File with Arguments (local spells)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/spellbook_randomizer.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                //"-h",
                "--spells_folder",
                "${workspaceFolder}/spells",
                "--system",
                "ose",
                "--caster_level",
                "6",
                "--caster_class",
                "cleric"
            ]
        },
        {
            "name": "Python Debugger: Main File with Arguments (github spells)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/spellbook_randomizer.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                //"-h",
                "--spells_folder",
                "https://raw.githubusercontent.com/agearhart/spellbook-randomizer/main/spells",
                "--system",
                "ose",
                "--caster_level",
                "2",
                "--caster_class",
                "cleric"
            ]
        }
    ]
}